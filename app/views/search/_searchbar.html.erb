<div id="searchbar" class="container">
  <div class="well">
    <div class="row">
      <div class="col-xs-12">
        <form name="search" action="<%= search_path %>" role="form">
          <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="keywords e.g. simple stack">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span>
                Search!
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
