<div id="tags" class="container">
  <div class="row">
    <div class="col-xs-12">

    	<h1>All Tags</h1>

		  <% @tags.each do |t| %>
		    <%= link_to "/tagged/#{t[0]}" do %>
		    	<button class="btn btn-default btn-lg"><%= t[0] %> &#215; <%= t[1].floor.to_s %></button>
		    <% end %>
		  <% end %>

    </div>
  </div>
</div>
