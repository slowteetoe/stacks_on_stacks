<div id="profile" class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <h1>Edit Your Profile</h1>

      <%= form_for @profile do |f| %>
        <% @profile.errors.each do |attr, msg| %>
          <p><%= msg %></p>
        <% end %>

        <div class="form-group">
          <%= f.label :display_name, "Display Name", class: "control-label" %>
          <div>
            <%= f.text_field :display_name, :autofocus => true, placeholder: "display this instead of your Amazon username...", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :tagline, class: "control-label" %>
          <div>
            <%= f.text_field :tagline, placeholder: "some words to live by...", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :gravatar_email, "Gravatar Email Address", class: "control-label" %>
          <div>
            <%= f.text_field :gravatar_email, placeholder: "the email you have registered with Gravatar...", class: "form-control" %>
            <span class="help-block"><a href="http://www.gravatar.com" target="_blank">Gravatar</a> is a cool service that lets you use a globally recognized avatar.</span>
          </div>
        </div>
        
        <div class="form-group">
          <div class="action">
            <%= f.submit "Update", class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
