<div id="qshow" class="container">
	<div class="row">
		<div class="col-xs-12">

			<div id="question">
				<div class="row">
					<% if user_signed_in? %>
						<div id="qvote" class="col-xs-2">
							<span id="downvote-question" class="glyphicon glyphicon-chevron-up"></span><br>
							<span class="vcount"><%= @question.vote_count %></span><br>
							<span id="upvote-question" class="glyphicon glyphicon-chevron-down"></span><br>
							<% if @question.voted current_user.username %>
								<%= link_to "un-vote", controller: "questions", action: "remove_vote", id: @question %>
							<% end %>
						</div>
					<% else %>
						<div id="qvote" class="col-xs-2">
							<span class="disabled glyphicon glyphicon-chevron-up"></span><br>
							<span class="vcount"><%= @question.vote_count %></span><br>
							<span class="disabled glyphicon glyphicon-chevron-down"></span>
						</div>
					<% end %>
					<div id="qbody" class="col-xs-10">
						<h1><%= @question.title %></h1>
						<p><%= fix_code_tags @question.body %></p>
						<p class="author"><strong>author: </strong> <%= @question.author %></p><br>

						<% if @question.comments.size > 0 %>
							<div class="comments">
								<% for comment in @question.comments %>
									<div class="comment">
										<p><%= fix_code_tags comment.body %> - <%= comment.author %></p>
									</div>
								<% end %>
							</div>
						<% end %>

						<div><span class="addcmnt" onclick="$('#qcmnt').toggle();">Add a Comment</span></div>

						<div class="cmntform" id="qcmnt">
							<%= form_tag "/comments", method: :post do |f| %>
								<div class="form-group">
									<div>
										<textarea id="body" name="body" class="form-control"></textarea>
										<input id="q_id" name="q_id" type="hidden" value="<%= @question.id %>">
									</div>
								</div>
								<div class="form-group">
									<div class="action">
										<button type='submit' class='btn btn-default'>Submit Comment</button>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>

			<% if @question.answers.size > 0 %>
				<div class="row">
					<div class="col-xs-2"></div>
					<div id="answers" class="col-xs-10"><h3>Answers</h3>
				</div>
				</div>
				<% for answer in @question.answers %>
					<div class="answer">
						<div class="row">
							<% if user_signed_in? %>
								<div class="col-xs-2 avote">
									<span id="upvote-answer" class="glyphicon glyphicon-chevron-up"></span><br>
									<span class="vcount"><%#= answer.vote_count %>0</span><br>
									<span id="downvote-answer" class="glyphicon glyphicon-chevron-down"></span><br>
									<% if @question.voted current_user.username %>
										<%= link_to "un-vote", controller: "questions", action: "remove_vote", id: answer %>
									<% end %>
								</div>
							<% else %>
								<div class="col-xs-2 avote">
									<span class="disabled glyphicon glyphicon-chevron-up"></span><br>
									<span class="vcount"><%#= answer.vote_count %>0</span><br>
									<span class="disabled glyphicon glyphicon-chevron-down"></span>
								</div>
							<% end %>
							<div class="col-xs-10 abody">
								<p><%= fix_code_tags answer.body %></p>
								<p class="author"><strong>author: </strong> <%= answer.author %></p>

								<% if answer.comments.size > 0 %>
									<div class="comments">
										<% for comment in answer.comments %>
											<div class="comment">
												<p><%= fix_code_tags comment.body %> - <%= comment.author %></p>
											</div>
										<% end %>
									</div>
								<% end %>

								<div><span class="addcmnt" onclick="$('#<%= answer.id %>').toggle();">Add a Comment</span></div>

								<div class="cmntform" id="<%= answer.id %>">
									<%= form_tag "/comments", method: :post do |f| %>
										<div class="form-group">
											<div>
												<textarea id="body" name="body" class="form-control"></textarea>
												<input id="q_id" name="q_id" type="hidden" value="<%= @question.id %>">
												<input id="a_id" name="a_id" type="hidden" value="<%= answer.id %>">
											</div>
										</div>
										<div class="action">
											<button type='submit' class='btn btn-default'>Submit Comment</button>
										</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>

			<div class="row">
				<div class="col-xs-2"></div>
				<div id="yours" class="col-xs-10">
					<h3>Your Answer</h3>

					<%= form_for [@question, Answer.new] do |f| %>
						<div class="form-group">
							<div>
								<%= f.text_area :body, rows: 8, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<div class="action">
								<%= f.submit "Submit Answer", class: "btn btn-default" %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
