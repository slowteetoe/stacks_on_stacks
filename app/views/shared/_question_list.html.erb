<div id="sorting">
  <%= link_to sort: "votes" do %>
    <button class="btn btn-default">votes</button>
  <% end %>
  <%= link_to sort: "answers" do %>
    <button class="btn btn-default">answers</button>
  <% end %>
  <%= link_to sort: "asked" do %>
    <button class="btn btn-default">asked</button>
  <% end %>
  <%= link_to sort: "author" do %>
    <button class="btn btn-default">author</button>
  <% end %>
</div>
<ul class="list-group">
  <% @questions.each do |q| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-1 vcounter hidden-xs">
          <div class="vote-count">
            <span class="count-data"><%= q.vote_count %></span><br>
            <span class="count-type">votes</span>
          </div>
        </div>
        <div class="col-xs-1 acounter hidden-xs">
          <div class="answer-count">
            <span class="count-data"><%= q.answers.count %></span><br>
            <span class="count-type">answers</span>
          </div>
        </div>
        <div class="col-xs-10">
          <span class="title"><%= link_to q.title, q %></span><br>
          <% q.tags.split(',').each do |t| %>
            <%= link_to "/tagged/#{t}", class: "qtag" do %>
              <button class="btn btn-default btn-xs"><%= t %></button>
            <% end %>
          <% end %>
          <span class="asked">asked <%= q.created_at.strftime("%b %d '%y at %-H:%M") %> by <%= author_link(q.user.username, q.user.profile) %></span>
        </div>
    </li>
  <% end %>
</ul>
